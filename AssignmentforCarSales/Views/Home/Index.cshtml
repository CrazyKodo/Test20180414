
@{
    ViewBag.Title = "Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Model.DTO.APIRespModel

<style>
    .pagination {
        margin: 0;
    }
</style>





<div class="panel panel-default">


    <table class="panel-body table table-striped table-bordered">
        <thead>
            <tr>

                <th>Title @Html.ActionLink("Sort", "Index", new { Sort = "Title", page = Model.pageNumber, size = Model.pageSize }, new { @class = "btn btn-xs btn-success" })</th>
                <th>Price @Html.ActionLink("Sort", "Index", new { Sort = "Price", page = Model.pageNumber, size = Model.pageSize }, new { @class = "btn btn-xs btn-success" })</th>
                <th>Make @Html.ActionLink("Sort", "Index", new { Sort = "Make", page = Model.pageNumber, size = Model.pageSize }, new { @class = "btn btn-xs btn-success" })</th>
                <th>Model</th>
                <th>Img</th>
                <th>ImgUrl</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.results)
            {
            <tr>
                <td>@item.title</td>
                <td>@item.price</td>
                <td>@item.make</td>
                <td>@item.model</td>
                <td><img src="@item.GetDisplayImgUrl()" style="height:50px;font-weight:50px;" /></td>
                <td>@item.GetDisplayImgUrl()</td>

            </tr>
            }
        </tbody>
    </table>

    <div class="panel-body">
        <nav>
            <ul class="pagination">

                @if (Model.pageNumber > 1)
                {
                    <li>@Html.ActionLink("previous", "Index", new { Sort = Model.sort, page = Model.pageNumber - 1, size = Model.pageSize }) </li>
                }

                @for (int i = 1; 0 < Model.pageNumber - i; i++)
                {
                    <li class="active">@Html.ActionLink(i.ToString(), "Index", new { Sort = Model.sort, page = i, size = Model.pageSize })</li>
                }
                <li class="disabled">@Html.ActionLink(Model.pageNumber.ToString(), "Index", new { Sort = Model.sort, page = Model.pageNumber, size = Model.pageSize })</li>
                @for (int i = Model.pageNumber + 1; i < Model.totalPageCount; i++)
                {
                    <li class="active">@Html.ActionLink(i.ToString(), "Index", new { Sort = Model.sort, page = i, size = Model.pageSize })</li>
                }
                @if (Model.pageNumber < Model.totalPageCount - 1)
                {
                    <li>@Html.ActionLink("next", "Index", new { Sort = Model.sort, page = Model.pageNumber + 1, size = Model.pageSize })</li>
                }

            </ul>
       <ul class="pagination">

            
                    <li>@Html.ActionLink("5", "Index", new { Sort = Model.sort, page = Model.pageNumber, size = 5 }) </li>
               
                    <li class="active">@Html.ActionLink("10", "Index", new { Sort = Model.sort, page = Model.pageNumber, size = 10 })</li>
                
             
            </ul>
        </nav>
    </div>
</div>




@section scripts
{

}

